---
export interface Props {
	id?: string;
	class?: string;
	inverted?: boolean;
	paddings?: boolean;
}
const { id, inverted, paddings, class: className } = Astro.props;
---

<section
	id={id}
	class:list={[
		{
			'2xl:px-52 py-10 md:py-20 xl:px-36 lg-px-36 md:px-16 sm:px-14 px-5': paddings,
			'bg-white text-slate-700': !inverted,
			'bg-black/90 text-white': inverted,
		},
		className,
	]}
>
	<slot />
</section>
